<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyUI.AddTaskActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/imgbtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/common_google_signin_btn_icon_light" />

        <Button
            android:id="@+id/Uploadbtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Upload" />

        <Button
            android:id="@+id/PickADatebtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="pick a date" />

        <SeekBar
            android:id="@+id/skbrNeccessary"
            style="@style/Widget.AppCompat.SeekBar.Discrete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="10"
            android:progress="3" />

        <TextView
            android:id="@+id/Neccessarytxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Neccessary"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <EditText
            android:id="@+id/etDueDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Due Date"
            android:inputType="textPersonName" />

        <SeekBar
            android:id="@+id/skbrImportant"
            style="@style/Widget.AppCompat.SeekBar.Discrete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="10"
            android:progress="3" />

        <TextView
            android:id="@+id/Importanttxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Important"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <EditText
            android:id="@+id/etTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Title"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/etSub"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Subject"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/SaveTaskbtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>