<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyUI.TaskViewItem">

    <TextView
        android:id="@+id/itmTvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="34dp"
        android:layout_weight="1"
        android:text="TextView"
        app:layout_constraintEnd_toStartOf="@+id/itmTvNeccessary"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/itmTvSubject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_weight="1"
        android:text="TextView"
        app:layout_constraintBaseline_toBaselineOf="@+id/itmTvNeccessary"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/itmTvNeccessary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="47dp"
        android:layout_weight="1"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/itmbtnEdit"
        app:layout_constraintEnd_toStartOf="@+id/itmTvSubject" />

    <TextView
        android:id="@+id/itmTvImportant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="86dp"
        android:layout_weight="1"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/itmbtnCall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="38dp"
        android:src="@mipmap/ic_call"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/itmTvImportant" />

    <ImageButton
        android:id="@+id/itmbtnEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginBottom="2dp"
        android:src="@mipmap/ic_writepen"
        app:layout_constraintBottom_toBottomOf="@+id/itmbtnCall"
        app:layout_constraintStart_toEndOf="@+id/itmbtnCall" />

    <ImageButton
        android:id="@+id/itmbtnDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="18dp"
        android:src="@mipmap/ic_garbage1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/itmbtnEdit" />

</androidx.constraintlayout.widget.ConstraintLayout>